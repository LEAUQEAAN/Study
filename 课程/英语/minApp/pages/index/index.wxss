/**index.wxss**/
.userinfo {
  margin:0 auto;
  width: 100%;
  height: 256px;
  align-items: center;
}

.userinfo-avatar {
  width: 64px;
  height: 64px; 
   margin:0 auto;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center; 
  position: relative;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50px;
}

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.item{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  width: 100%;
}
.hr{
  width: 100%;
  height: 15px;
}

.img{
  margin-left: 10px;
  line-height: 40px;
  padding-top:9px; 

}
.name{
  padding-top:10px;
  padding-left: 10px;
  padding-bottom: 15px;
  font-size: 17px;
}
.detail{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 40px;
  line-height: 50px;
  color: #888888;
}
.line{
  border:1px solid #F0F0F0;
  opacity: 1;
}
.count{
  font-size: 13px;
  color: #ff0000;
}
